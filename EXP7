//DISPLAY THE MARKS OF STUDENTS
#include<iostream>
using namespace std;
int main() {
    int i;
    int m[10]={10,9,8,10,8,5,6,3,8,4};
    for (i=0;i<=9;i++)
    {
    cout<<m[i]<<endl;}}

