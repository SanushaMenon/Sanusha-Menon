//TAKE THE MARKS OF STUDENTS
#include<iostream>
using namespace std;
int main() {
    int i;
    int m[5];
    for (i=0;i<=4;i++)
    {
        cout<<"ENTER STUDENT MARKS"<<endl;
        cin>>m[i];
    }
    for (i=0;i<=4;i++)
    {
        cout<<m[i]<<endl;
    }}

/*/OUTPUT
