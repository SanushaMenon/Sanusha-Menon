//SINGLY LINKED LIST
#include <iostream>
using namespace std;
class Node{
    public:
    int a;
    Node*next;
    
    Node(int data){
        a=data;
        next=NULL;
    }
};
int main(){
    Node*n=new Node(100);
    cout<<n->a<<" "<<n->next<<endl;
    return 0;
}



