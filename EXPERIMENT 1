#include<iostream>
using namespace std;
int main()
{
    //PRINT 'HELLO WORLD' AND 'MY FIRST PROGRAM'
    cout<<"Hello World"<<endl;
    cout<<"My first program"<<endl;
    /*/OUTPUT
    Hello World
    My first program
    /*/

    //PRINT A NUMBER
    int m;
    cout<<"Enter a number ";
    cin>>m;
    cout<<"The number is "<<m<<endl;
    /*/OUTPUT
    Enter a number 2
    The number is 2
    /*/

    //CALCULATOR
    int a;
    int b;
    int sum;
    cout<<"Enter first number: ";
    cin>>a;
    cout<<"Enter second number: ";
    cin>>b;
    sum=a+b;
    cout<<"The number is "<<sum;
    
    /*/OUTPUT
    Enter first number: 1
    Enter second number: 2
    The number is 3
    /*/

}
